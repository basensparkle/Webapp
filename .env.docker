# Docker Compose Environment Variables
# Copy this file to .env before running docker-compose

# MySQL Database
MYSQL_ROOT_PASSWORD=rootpassword123
DB_NAME=icteerbeek
DB_USER=icteerbeek
DB_PASSWORD=icteerbeek123

# Application Security
JWT_SECRET=docker-dev-secret-change-in-production-use-openssl-rand

# Authentication
USE_LOCAL_AUTH=true

# Application Configuration
VITE_APP_ID=local-app
VITE_APP_TITLE=ICT Eerbeek
VITE_APP_LOGO=/logo.png

# OAuth (optional - leave empty for local auth)
OAUTH_SERVER_URL=
VITE_OAUTH_PORTAL_URL=
OWNER_OPEN_ID=
OWNER_NAME=

# Optional Services
BUILT_IN_FORGE_API_URL=
BUILT_IN_FORGE_API_KEY=
VITE_ANALYTICS_ENDPOINT=
VITE_ANALYTICS_WEBSITE_ID=
